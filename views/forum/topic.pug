extends ../layout.pug

block stylesheet
    link(rel="stylesheet" href="/css/topic.css")

block content
    #TopicPage
        #alertMessage 
        ul.breadcrumb
            li 
                a(href="/" title="الرئيسية")
                    img(src="/icon/home.svg" alt="الرئيسية") 
            li 
                small /
                a(href="/forum" title=`مجتمع ${options.website_name}`) مجتمع #{options.website_name}
            li 
                small /
                a(href=`/forum/${options.TopicJosn.topic.categories.category_id}`) #{options.TopicJosn.topic.categories.title}
            li 
                small /
                a(href=`/forum/topic/${options.TopicJosn.topic.topic_id}`) #{options.TopicJosn.topic.title}
        .TopicBox 
            .TopicHeader 
                h2#topic_title #{options.TopicJosn.topic.title} 
                .timeToic
                    img(src="/icon/time.svg" alt="time").iconTopic
                    small(title=options.getElapsedTime(options.TopicJosn.topic.updatedAt))= options.getElapsedTime(options.TopicJosn.topic.updatedAt)
                ul.TopicHeaderInfo 
                    li 
                        img(src="/icon/user.svg" alt="user" title=options.TopicJosn.topic.users.name).iconTopic
                        a(href=`/username/${options.TopicJosn.topic.users.username}` title=options.TopicJosn.topic.users.name).textIcon #{options.TopicJosn.topic.users.username} 
                    li 
                        img(src="/icon/like.svg" alt="like" title=`يحتوي الموضوع على ${options.TopicJosn.likes.length} إعجاب`).iconTopic
                        p.textIcon=options.TopicJosn.likes.length
                    li 
                        img(src="/icon/view.svg" alt="view" title=`تمت مشاهدة الموضوع من قبل ${options.TopicJosn.views} شخص`).iconTopic
                        p.textIcon=options.TopicJosn.views 
                    li 
                        img(src="/icon/comment.svg" alt="comment" title=`يحتوي الموضوع على ${options.TopicJosn.comments.length} رد`).iconTopic
                        p.textIcon=options.TopicJosn.comments.length  
                    li 
                        img(src="/icon/report.svg" alt="reports" title=`يحتوي الموضوع على ${options.TopicJosn.reports.length} بلاغ`).iconTopic
                        p.textIcon=options.TopicJosn.reports.length  
            .TopicContent!= options.TopicJosn.topic.content
        ul.TopicButtonBox 
            if options.canEdit
                li#removeTopic
                    img(src="/icon/remove.svg" alt="remove" title="حذف الموضوع").iconTopic
                    p.textIcon حذف
            if options.session.isLoggedIn
                li#likeTopic
                    img(src="/icon/like.svg" alt="view" title="الإعجاب بالموضوع").iconTopic
                    p.textIcon إعجاب
                li#reportTopic 
                    img(src="/icon/report.svg" alt="report" title="ابلاغ عن اعلان مخالف").iconTopic
                    p.textIcon بلاغ
            li#sharing
                img(src="/icon/sharing.svg" alt="sharing" title="مشاركة بالموضوع").iconTopic
                p.textIcon مشاركة
                ul#sharingBox
                    li#copyLink
                        img(src="/icon/link.svg" alt="copy" title="نسخ رابط الموضوع").iconTopic
                        p.textIcon نسخ
                    li 
                        img(src="/icon/whatsapp.svg" alt="واتساب" title="المشاركة عبر الواتساب").iconTopic
                        p.textIcon#whatsappLink واتساب
                    li 
                        img(src="/icon/telegram.svg" alt="تيليجرام" title="المشاركة عبر التيليجرام").iconTopic
                        p.textIcon#telegramLink تيليجرام
        if options.TopicJosn.tags !== undefined && options.TopicJosn.tags.tag_name.length !== 0
            ul.TopicTagsBox 
                each val in options.TopicJosn.tags.tag_name
                    li: a(href=`/forum/tag/${val}` title=val) #{val}
        ul.TopicComment
            each item, index in options.TopicJosn.comments
                li.TopicCommentBox
                    .CommentBoxHeader 
                        #CommentInfo 
                            div 
                                img(src="/icon/user.svg" alt="user" title=item.users.name).iconTopic
                                a(href=`/username/${item.users.username}` title=item.users.name).textIcon.CommentUsername #{item.users.username} 
                            div 
                                img(src="/icon/time.svg" alt="view" title="مشاركة بالموضوع").iconTopic
                                small=options.getElapsedTime(item.updatedAt)

                        small#CommentId=index+1
                    div(id=`comment_id_${item.comment_id}`).CommentContent!=item.content
                    .buttonCommentBox
                        p(id=`ToReply_${item.comment_id}`).ToReply الرد
                        p(id=`username_${item.users.username}_user_id_${item.users.user_id}`).removeComeent حذف
        #CommentBox
            #editorBox
            button#CreateReply إرسال
block script
    script(type="module")
        include ../../public/js/forum/topic.js
    script.
        window.options = !{jsStringify(options)}; 