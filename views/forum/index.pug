extends ../layout.pug

block stylesheet
  link(rel="stylesheet" href="/css/forum.css")

block content
  #forumPage
    ul.breadcrumb
      li 
        a(href="/")
          img(src="/icon/home.svg" alt="الرئيسية") 
      li 
        small /
        a(href="/forum") مجتمع #{options.website_name}
    h2 فئات المجتمع
    .Categories
      .CategoriesBox
        each item in options.getAllCategories 
          .DivCategories 
            img(src="/icon/forum.svg" alt="forum" title="إيقونة الفئة").IconCategories
            .MainCategories
              a(href=`/forum/${item.category_id}` title=item.description) #{item.title}
              p #{item.description}
            .CountCategories
              p المواضيع
              small #{item.counttopics}
            .CountCategories
              p المشاركات
              small #{item.countcomments}