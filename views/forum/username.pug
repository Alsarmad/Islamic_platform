extends ../layout.pug

block stylesheet
    link(rel="stylesheet" href="/css/username.css")

block content
    #usernamPage
        ul.breadcrumb
            li 
                a(href="/")
                    img(src="/icon/home.svg" alt="الرئيسية" class="iconFilter") 
            li 
                small /
                a(href="/forum") مجتمع #{options.website_name}
        #BoxUsernam
            #avatar= options.user.username.substring(0,1).toUpperCase()
            p#name #{options.user.name}
            p#username @#{options.user.username}
            p#time= `عضو ${options.getElapsedTime(options.user.createdAt)}`
            ul#boxStats
                li 
                    img(src="/icon/writing-topic.svg" alt="").iconStats.iconFilter
                    p#countTopic
                li 
                    img(src="/icon/comment.svg" alt="").iconStats.iconFilter
                    p#countComment
                li 
                    img(src="/icon/like.svg" alt="").iconStats.iconFilter
                    p#countLike
            .boxStatsTopisAndCommentAndLikw#topics
                h2 آخر المواضيع التي تم كتابتها
            .boxStatsTopisAndCommentAndLikw#comeents
                h2 آخر التعليقات التي تم كتابتها
            .boxStatsTopisAndCommentAndLikw#likes
                h2 آخر الإعجابات
block script
    script(type="module")
        include ../../public/js/forum/username.js
    script.
        window.options = !{jsStringify(options)}; 