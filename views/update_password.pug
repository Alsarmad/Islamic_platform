extends ./layout.pug

block stylesheet
    link(rel="stylesheet" href="/css/update_password.css")

block content
    #alertUpPass للأسف فشلت عملية استعادة كلمة المرور
    #updatePassPage
        if options.isUpdatePassword
            h2 إعادة تعيين كلمة المرور
            #updatePassBox 
                ul#upPassinput 
                    li 
                        p كلمة المرور الجديدة
                        input(type="password" name="password" placeholder="أدخل كلمة المرور الجديدة")#password
                        small#password_message لم تدخل كلمة مرور بعد
                    li 
                        p تأكيد كلمة المرور الجديدة
                        input(type="password" name="password_confirmation" placeholder="أدخل تأكيد كلمة المرور الجديدة")#password_confirmation
                        small#password_confirmation_message لم تدخل تأكيد كلمة مرور بعد
                button#upPassButton تغيير
        else 
          h2 #{options.text}
block script
    script(type="module")
        include ../public/js/update_password.js
    script.
        window.options = !{jsStringify(options)};