#header
    #header_box
        #header_menu_right
            button#button_menu_header
                img(src="/icon/menu.svg" alt="menu" class="iconFilter" width="22" height="22")#icon_menu
            a(href="/" title="logo")#logo
                img(src="/icon/logo.svg" alt="menu" class="iconFilter" width="150" height="60")
        #header_menu_top
            a(href="/forum")
                img(src="/icon/forum.svg" alt="forum" class="iconFilter" width="15" height="15")
                p المجتمع
            a(href="/adhkar")
                img(src="/icon/adhkar.svg" alt="adhkar" class="iconFilter" width="15" height="15")
                p اذكار
            a(href="/prayer")
                img(src="/icon/prayer.svg" alt="prayer time" class="iconFilter" width="15" height="15")
                p اوقات الصلاة
        #header_menu_left
            a(href="/login")#login دخول
            a(href="/register")#register حساب جديد 
        #header_menu_left_isLoggedIn
            img(src="/icon/user.svg" alt="username" class="iconFilter" width="35" height="35")
        #menu_logged
            ul  
                li 
                    a(href="/username")#toggleMenuProfile الملف الشخصي
                        img(src="/icon/profile.svg" alt="Profile" class="iconFilter" width="10" height="10")
                li 
                    a(href="/settings") الإعدادات
                        img(src="/icon/settings.svg" alt="settings" class="iconFilter" width="10" height="10")

            button#logoutButton تسجيل خروج
        #SideMenuBox
            #SideMenu
                a(href="/login")#SideMenuLogin دخول 
                a(href="/register")#SideMenuRegister حساب جديد 
                a(href="/username")#SideMenuProfile الملف الشخصي
                a(href="/settings")#SideMenuSettings الإعدادات
                a(href="/adhkar") اذكار 
                a(href="/quran") القرآن الكريم 
                a(href="/forum") المجتمع 
                button#SideMenuLogout تسجيل الخروج
