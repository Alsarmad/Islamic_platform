extends ../partials/layout.pug

block stylesheet
    link(rel="stylesheet" href="/css/prayer.css")

block content
    #isPermissionLocation
        p تنبيه
        h2 يرجى السماح للصفحة بالوصول إلى الموقع الحالي لتحديد خطوط الطول والعرض. ستساعد هذه المعلومات في تحسين تجربتك على الموقع.
        small قم بتحديث الصفحة F5
        button#bt_manual_entry ادخال يدوي
    #prayerPage
        #BoxTime
            p#hour_minutes 0:00
            p#colon :
            p#seconds 00  
        i.fa-solid.fa-camera#screenshot 
        #Boxdata
            p#data_hijri
            p#data_today 
            p#data_Gregorian
        #BoxTimeZone
            p المنطقة الزمنية:
            p#timezone 
        #BoxRemainingTime
            P الوقت المتبقي لرفع الأذان لصلاة 
                span#remaining_name 
            small#RemainingTime
        ul#BoxPrayer
            li#BoxFajr 
                p الفجر
                p.timePrayer#PrayerFajr
            li#BoxSunrise
                p الشروق
                p.timePrayer#PrayerSunrise
            li#BoxDhuhr
                p الظهر
                p.timePrayer#PrayerDhuhr
            li#BoxAsr
                p العصر
                p.timePrayer#PrayerAsr
            li#BoxMaghrib
                p المغرب
                p.timePrayer#PrayerMaghrib
            li#BoxIsha 
                p العشاء
                p.timePrayer#PrayerIsha
        img(src="/icon/logo.svg" alt="logo" class="iconFilter")#logoScreen 
        button#bt_manual_entry_pr ادخال يدوي للموقع
block script
    script(type="module")
        include ../../public/js/pages/prayer.js
    script. 
        const bt_manual_entry = document.getElementById("bt_manual_entry");
        const bt_manual_entry_pr = document.getElementById("bt_manual_entry_pr");
        bt_manual_entry.addEventListener("click", () => window.location.pathname = '/input-location');
        bt_manual_entry_pr.addEventListener("click", () => window.location.pathname = '/input-location');