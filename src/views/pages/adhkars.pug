extends ../partials/layout.pug

block stylesheet
  link(rel="stylesheet" href="/static/css/adhkar.css")

block content
  #adhkarPage 
    ul.breadcrumb
      li 
        a(href="/")
          img(src="/static/icon/home.svg" alt="الرئيسية" class="iconFilter") 
      li 
        small /
        a(href="/adhkar") أذكار
      li 
        small /
        a(href=`/adhkar/${options.AdhkarObject.category.split(" ").join("_")}`) #{options.AdhkarObject.category}
      li 
        small /
        a(href=`/adhkars/${options.AdhkarObject.title.split(" ").join("_")}` style#="white-space: normal;") #{options.AdhkarObject.title}
    h1#titleAdhkar #{options.AdhkarObject.title}
    #adhkarsBox 
      .repetition#repetition
        p#repetition_p #{options.AdhkarObject.repetition}
        img(src="/static/icon/return.svg" alt="إعداة التكرار" class="iconFilter")#repetition_img
      .adhkar_text#adhkar_text
        h3!= options.filterSpan(options.AdhkarObject.adhkar)
        p!= options.filterSpan(options.AdhkarObject.description)
        small!= options.filterSpan(options.AdhkarObject.source)
block script
  script(type="module")
    include ../../public/js/pages/adhkar.js